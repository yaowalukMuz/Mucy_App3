<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Toolbar-->
    <include
        android:id="@+id/toolbarRegister"
        layout="@layout/toolbar_main"

        />

    <!--Content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnRegister"
        android:layout_below="@+id/toolbarRegister"
        android:background="@drawable/bg_clear"
        android:orientation="vertical">

        <!--First-->
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield_name"
            android:hint="First Name : "
            android:inputType="text"
            android:textSize="@dimen/h3" />

        <!--Last-->
        <EditText
            android:id="@+id/edtLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield_surname"
            android:hint="Last Name : "
            android:inputType="text"
            android:textSize="@dimen/h3" />

        <!--Email-->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield_email"
            android:hint="Email : "
            android:inputType="textEmailAddress"
            android:textSize="@dimen/h3" />

        <!--Phone-->
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield_phone"
            android:hint="Phone : "
            android:inputType="number"
            android:textSize="@dimen/h3" />

        <!--User-->
        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield_user"
            android:hint="Username : "
            android:inputType="text"
            android:textSize="@dimen/h3" />

        <!--Password-->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield_password"
            android:hint="Password : "
            android:inputType="text"
            android:textSize="@dimen/h3" />

    </LinearLayout>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_button"
        android:text="Register" />

</RelativeLayout>